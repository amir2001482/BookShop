@model ReflectionIT.Mvc.Paging.PagingList<BookShop.Models.ViewModels.RoleManagerViewModel>
@using ReflectionIT.Mvc.Paging
@addTagHelper*,ReflectionIT.Mvc.Paging
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-light">
                    نقش ها
                </div>
                <div class="card-body">
                    <p>
                        <a asp-action="AddRole" class="btn btn-primary">افزودن نقش جدید</a>
                    </p>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.SortableHeaderFor(model => model.RoleName)
                                </th>
                                <th>
                                    @Html.SortableHeaderFor(model => model.Description)
                                </th>
                                <th class="text-center">
                                    @Html.SortableHeaderFor(model => model.UsersCount)
                                </th>
                                <th class="text-center">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoleName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td class="text-center">
                                        <a class="btn btn-info btn-icon">
                                            <i class="fa fa-user p-1">
                                                @Html.DisplayFor(modelItem => item.UsersCount)
                                            </i>
                                            |
                                            <span class="p-1">
                                                کاربران
                                            </span>
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="EditRole" asp-route-id="@item.Id" class="btn btn-success btn-icon">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-danger btn-icon">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <nav>
                        @await this.Component.InvokeAsync("Pager", new { PagingList = this.Model })
                    </nav>
                </div>
            </div>
        </div>
    </div>

