@model ReflectionIT.Mvc.Paging.PagingList<BookShop.Models.ViewModels.BooksIndexViewModel>
@inject BookShop.Classes.ConvertData convertDate
@using ReflectionIT.Mvc.Paging
@addTagHelper*,ReflectionIT.Mvc.Paging
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-light">
                لیست کتاب ها
            </div>
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> جستجو</button>
                                </span>
                                <input id="input-group-1" name="title" class="form-control" placeholder="عنوان کتاب را واردکنید ..." type="text">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="row form-group">
                                <label class="ml-2">تعداد ردیف</label>
                                <div class="col-md-4  padding-0px">
                                    <select class="select2" name="row" asp-items="@ViewBag.RowID"></select>
                                </div>
                                <div class="col-md-3 padding-0px">
                                    <input type="submit" value="نمایش بده" class="btn btn-primary float-left" />
                                </div>
                            </div>
                        </div>
                        @if (ViewBag.Search != "")
                        {
                            <div class="col-md-4">
                                <a href="/Admin/Book/Index" class="float-left"><i class="fa fa-arrow-circle-left"></i>  بازگشت به لیست کتاب ها   </a>
                            </div>
                        }

                    </div>
                </form>
                <p>
                    <a class="btn btn-primary btn-block" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                        جستجوی پیشرفته کتاب
                    </a>
                </p>  
                    <div class="collapse" id="collapseExample">
                        <div class="card card-body">
                            <form asp-action="AdvancedSearch">
                                <div class="row">
                                 
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">عنوان</label>
                                            <input class="form-control" placeholder="عنوان" name="Title">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">شابک</label>
                                            <input class="form-control" placeholder="شابک" name="ISBN">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">زبان</label>
                                            <select class="select2 js-states form-control" name="Languge" asp-items="ViewBag.LanguageID" >
                                                <option value="">همه زبان ها </option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">دسته بندی</label>
                                            <input type="text" id="justAnotherInputBox" placeholder="جستجو کنید" name="Category" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">نویسنده</label>
                                            <select class="select2 js-states form-control" asp-items="ViewBag.AuthorID" name="Author">
                                                <option value="" >همه نویسندگان</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">مترجم</label>
                                            <select class="select2 js-states form-control" asp-items=" ViewBag.TranslatorID" name="Translator">
                                                <option value="" >همه مترجمان</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">ناشر</label>
                                            <select class="select2 js-states form-control" asp-items=" ViewBag.PublisherID" name="PublisherName">
                                                <option value="">همه انتشارات</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <input type="submit" value="جستجو" class="btn btn-success float-left" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="table-responsive table-striped">
                        @if (ViewBag.MSGFaid != null)
                        {
                            <div class="alert alert-danger alert-dismissable">
                                @ViewBag.MSGFaid
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">
                                        &times;
                                    </span>
                                </button>
                            </div>

                        }
                        else if (ViewBag.MSGSucsses != null)
                        {
                            <div class="alert  success alert-dismissable">
                                @ViewBag.MSGSucsses
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">
                                        &times;
                                    </span>
                                </button>
                            </div>
                        }


                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>ردیف</th>
                                    <th>@Html.SortableHeaderFor(model => model.Title, "Title")</th>
                                    <th>@Html.SortableHeaderFor(model => model.Author, "Author")</th>
                                    <th>@Html.SortableHeaderFor(model => model.ISBN, "ISBN")</th>
                                    <th>@Html.SortableHeaderFor(model => model.Stock, "Stock")</th>
                                    <th>@Html.SortableHeaderFor(model => model.PublisherName, "PublisherName")</th>
                                    <th class="text-center">@Html.SortableHeaderFor(model => model.Price, "Price")</th>
                                    <th class="text-center">@Html.SortableHeaderFor(model => model.PublishDate, "PublishDate")</th>
                                    <th style="width:25px;">@Html.SortableHeaderFor(model => model.IsPublish, "IsPublish")</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int i = ViewBag.NumOfRow;}
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">@i</td>
                                        <td class="text-nowrap">@item.Title</td>
                                        <td>@item.Author</td>
                                        <td>@item.ISBN</td>
                                        <td>@item.Stock</td>
                                        <td>@item.PublisherName</td>
                                        <td class="text-center">@item.Price</td>
                                        <td class="text-center">
                                            @if (item.PublishDate != null)
                                            {
                                                @convertDate.ConvertMiladiToShamsi((DateTime)item.PublishDate, "yyyy/MM/dd")
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (item.IsPublish == true)
                                            {
                                                <label class="badge badge-success btn-block">منتشر شده</label>
                                            }

                                            else
                                            {
                                                <label class="badge badge-info btn-block">پیش نویس</label>
                                            }

                                        </td>
                                        <td class="text-center">
                                            <a href="/Admin/Book/Detials/@item.BookID" class="btn btn-info btn-icon"><i class="fa fa-eye text-white"></i></a>
                                            <a href="/Admin/Book/Edit/@item.BookID" class="btn btn-success btn-icon"><i class="fa fa-edit text-white"></i></a>
                                            <a href="/Admin/Book/Delete/@item.BookID" class="btn btn-danger btn-icon"><i class="fa fa-trash text-white"></i></a>
                                        </td>
                                    </tr>
                                    i++;
                                }

                            </tbody>
                        </table>

                        <nav>
                            @await this.Component.InvokeAsync("Pager", new { PagingList = this.Model })
                        </nav>

                        @*<nav>
            <vc:pager paging-list="@Model"></vc:pager>
        </nav>*@


                    </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var SampleJSONData = @Html.Raw(Json.Serialize(ViewBag.Category));
    var comboTree2;

jQuery(document).ready(function($) {
		comboTree2 = $('#justAnotherInputBox').comboTree({
			source : SampleJSONData,
			isMultiple: false
		});
});</script>

