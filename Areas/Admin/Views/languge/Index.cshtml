@model ReflectionIT.Mvc.Paging.PagingList<BookShop.Models.Language>
@using ReflectionIT.Mvc.Paging
@addTagHelper*,ReflectionIT.Mvc.Paging
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-light">
                    زبان ها
                </div>
                <div class="card-body">
                    <p>
                        <a asp-action="Create" class="btn btn-primary">افزودن زبان جدید</a>
                    </p>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.SortableHeaderFor(model => model.LanguageName)
                                </th>
                                <th class="text-center">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LanguageName)
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.LanguageID" class="btn btn-success btn-icon">
                                            <i class="fa fa-edit text-white"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.LanguageID" class="btn btn-danger btn-icon">
                                            <i class="fa fa-trash text-white"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <nav>
                        @await this.Component.InvokeAsync("Pager", new { PagingList = this.Model })
                    </nav>
                </div>
            </div>
        </div>
    </div>

