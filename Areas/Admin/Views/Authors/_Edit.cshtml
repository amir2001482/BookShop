@model BookShop.Models.Author

<style>
    /*chon modal dar har jayie momken ast baz shavad var ejra shavad style shadow track datalist styles.css nmizarim*/
    .modal-header .close {
        padding: 0rem;
        margin: 0rem 0rem 0rem 0;
    }
</style>
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">ویرایش اطلاعات کتاب</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                @if (ViewData.ModelState.IsValid == false)
                {
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-0"></div>
                }

                else
                {
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" value="@ViewData.ModelState.IsValid.ToString()" name="IsValid" />
                <input type="hidden" asp-for="AuthorID" />
                <div class="card-body">
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </form>
                }

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-success ml-1" data-save="modal">ذخیره تغییرات</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>

