@model BookShop.Models.ViewModels.BooksIndexViewModel
@{
    ViewData["Title"] = "SearchByIsbn";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="bg-light card-header">
                جستجو بر اساس شابک
            </div>
            <div class="card-body">
                <div class="col-md-12 form-group">
                    <form asp-action="SearchByIsbn">
                        <div class="row form-group">
                            <div class="col-md-6">
                                <input name="ISBN" class="form-control form-group" placeholder="شابک کتاب را وارد کنید" />
                            </div>
                            <div class="col-md-6">
                                <input type="submit" class="btn btn-primary form-group float-right" value="جستجو" />
                            </div>
                        </div>
                    </form>
                </div>
                @if (ViewBag.Msg != null)
                {
                    <div class="alert alert-danger alert-dismissable">
                        @ViewBag.Msg
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                else
                {
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label asp-for="Title"></label>
                                <input asp-for="Title" class="form-control" disabled />
                            </div>
                            <div class="col-md-6 form-group">
                                <label asp-for="Author"></label>
                                <input asp-for="Author" class="form-control" disabled />
                            </div>
                            <div class="col-md-6 form-group">
                                <label asp-for="Translator"></label>
                                <input asp-for="Translator" class="form-control" disabled />
                            </div>
                            <div class="col-md-6 form-group">
                                <label asp-for="Category"></label>
                                <input asp-for="Category" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

